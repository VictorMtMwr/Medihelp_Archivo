{
  "name": "registro-documentos-clinicos",
  "version": "1.0.0",
  "description": "Aplicación de escritorio para registro de documentos clínicos",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dev": "electron . --dev --no-sandbox",
    "setup-venv": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/setup-venv-portable.ps1",
    "dist": "electron-builder",
    "dist:portable": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/build-portable.ps1",
    "build": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/build-portable.ps1"
  },
  "keywords": [
    "electron",
    "documentos",
    "clinicos"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "vite": "^7.3.1"
  },
  "dependencies": {},
  "build": {
    "appId": "com.medihelp.archivo",
    "productName": "Medihelp Archivo",
    "icon": "frontend/assets/descarga.png",
    "directories": {
      "output": "dist-build"
    },
    "asar": true,
    "disableDefaultIgnoredFiles": true,
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "frontend/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      },
      {
        "from": "build/python-embed.zip",
        "to": "python-embed.zip"
      },
      {
        "from": "build/site-packages.zip",
        "to": "site-packages.zip"
      }
    ],
    "win": {
      "icon": "frontend/assets/icon.ico",
      "target": [
        "portable"
      ],
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.exe"
    }
  }
}
